<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            app:backgroundTint="#765341"
            android:id="@+id/engButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENG"
            android:onClick="onLanguageButtonClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/frButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:background="@drawable/language_rounded_buttons" />/>

        <Button
            app:backgroundTint="#765341"
            android:id="@+id/frButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FR"
            android:onClick="onLanguageButtonClick"
            app:layout_constraintStart_toEndOf="@id/engButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:background="@drawable/language_rounded_buttons" />/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>